<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jejunu.honjawan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 연락처 권한 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/hjw_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hjw_logo_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name="com.jejunu.honjawan.fragments.BookmarkFragment"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/googleMap" />

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <activity
            android:name="com.jejunu.honjawan.SplashActivity"
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jejunu.honjawan.MainActivity">


        </activity>
        <activity android:name="com.jejunu.honjawan.GoogleLoginActivity" />
    </application>

</manifest>